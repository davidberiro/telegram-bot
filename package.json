{
  "name": "heroku-node-telegram-bot",
  "version": "1.0.3",
  "description": "Starter pack for running telegram bot on the Heroku using Node.js",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s",
    "build": "yarn clean && yarn build-babel",
    "start": "yarn build && node ./build/index.js",
    "switch_to_dev": "export $(cat .env | xargs) && wget --spider https://api.telegram.org/bot$TOKEN/setWebhook?url= --delete-after && yarn start"
  },
  "author": "Volodymyr Lut",
  "license": "ISC",
  "dependencies": {
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.15.0",
    "dotenv": "^6.0.0",
    "express": "^4.13.4",
    "node-telegram-bot-api": "^0.30.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1"
  }
}
